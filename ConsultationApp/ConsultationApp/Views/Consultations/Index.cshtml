@model IEnumerable<ConsultationApp.Models.Consultation>

@{
    ViewBag.Title = "Consultations";
}

<h2>Consultations</h2>

<table class="table">
    <tr>
        <td>
            @using (Html.BeginForm())
            {
                <p>
                    Search: @Html.TextBox("SortBy", "", new { @placeholder = "Teacher/Subject/Title"})
                    <input type="submit" value="Search" />
                </p>
            }
        </td>
        <td>
            @using (Html.BeginForm())
            {
                <p>
                    Filter by day: @Html.DropDownList("ByDay", ViewBag.Days as SelectList)
                    <input type="submit" value="Search" />
                </p>
                
            }
        </td>
        <td>
            @using (Html.BeginForm())
            {
                <p>
                    Filter by difficulty: @Html.DropDownList("ByDifficulty", ViewBag.Difficulties as SelectList)
                    <input type="submit" value="Search" />
                </p>

            }
        </td>
    </tr>
    <tr>
